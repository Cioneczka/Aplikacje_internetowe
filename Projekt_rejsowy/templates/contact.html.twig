{% extends 'schema/base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Kontakt</h1>
        <p>Skontaktuj się z nami w razie jakichkolwiek pytań dotyczących rezerwacji rejsów wycieczkowych. Jesteśmy do Twojej dyspozycji!</p>
        <div class="row">
            <div class="col-md-6">
                <h3>Dane kontaktowe</h3>
                <ul class="list-unstyled">
                    <li><i class="bi bi-telephone-fill"></i> Telefon: +48 123 456 789</li>
                    <li><i class="bi bi-envelope-fill"></i> Email: kontakt@kubryk.pl</li>
                    <li><i class="bi bi-geo-alt-fill"></i> Adres: Ul. Przykładowa 1, 00-000 Warszawa, Polska</li>
                </ul>
            </div>
            <div class="col-md-6">
                <h3>Formularz kontaktowy</h3>
                <form action="/send-message" method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Imię i Nazwisko</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Wiadomość</label>
                        <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Wyślij</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}