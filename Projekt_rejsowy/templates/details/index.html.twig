{% extends 'schema/base.html.twig' %}

{% block body %}
<div class="example-wrapper">
    <h1>Szczegóły rejsu</h1>

    <table>
        <thead>
            <tr>
                <th>Field</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Cruise ID</td>
                <td>{{ cruise.id }}</td>
            </tr>
            <tr>
                <td>Start Date</td>
                <td>{{ cruise.startdate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <td>End Date</td>
                <td>{{ cruise.enddate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <td>Price</td>
                <td>{{ cruise.price }}</td>
            </tr>
            <tr>
                <td>Destination</td>
                <td>{{ cruise.destination }}</td>
            </tr>
            <tr>
                <td>Start Point</td>
                <td>{{ cruise.startpoint }}</td>
            </tr>
            <tr>
                <td>Description</td>
                <td>{{ cruise.description }}</td>
            </tr>
            <tr>
                <td>Ship Name</td>
                <td>{{ cruise.ship.name }}</td>
            </tr>
            <tr>
                <td>Ship Capacity</td>
                <td>{{ cruise.ship.capacity }}</td>
            </tr>
            <tr>
                <td>Ship Description</td>
                <td>{{ cruise.ship.description }}</td>
            </tr>
        </tbody>
    </table>

    <form action="{{ path('insert_reservation', {'id': cruise.id}) }}" method="POST">
        <input type="hidden" name="_token" value="{{ csrf_token('insert_reservation') }}">
        
        <div class="mb-3">
            <label for="people_count" class="form-label">Ilość osób</label>
            <input type="number" id="people_count" name="people_count" class="form-control" min="1" required>
        </div>

        <div style="text-align: center;">
            <button type="submit" class="btn btn-primary">Zarezerwuj</button>
        </div>
    </form>
</div>
{% endblock %}
